<% if @user %>
    <h1>Here's what <u><%= @user.username %></u> had to say about...</h1>
<% else %>
    <h1>All Reviews</h1>
<% end %>
    <ul>
    <% @reviews.each do |r| %>
    <li>
        <p><%= link_to r.recipe.name, recipe_path(r.recipe) %> - "<em><%= r.content %></em>" - <%= r.created_at.strftime("%Y-%m-%d") %></p>
    </li>
    <% end %>
    </ul>



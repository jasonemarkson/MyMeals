<h1><%=@recipe.name%></h1>

Ingredients: 
<ul>
    <% @recipe.ingredients.split("\r\n").each do |ing| %>
    <li>
    <%= ing %>
    </li>
    <% end %>
</ul>

Instructions: 
<ul>
    <% @recipe.instructions.split("\r\n").each do |ins| %>
    <li>
    <%= ins %>
    </li>
    <% end %>
</ul>
<br>

<p><em>Made by: <%= @user %></em></p>

<%=form_for @recipe.reviews.build do |f| %>
    <%= f.text_area :content, placeholder: "Add a Review..." %>
    <%= f.submit value: "Add"%>
<% end %>

<h4><%= pluralize(@reviews.count, "Review") %></h4>

<% @reviews.each do |review| %>
    <em>"<%= review.content %>"</em><br>
<% end %>


<br><br>
<p><%= button_to "Delete Recipe", recipe_path(@recipe), method: :delete if @recipe.user_id == current_user.id %></p>